#!/bin/bash

set -euo pipefail

echo "--- Build RPM spec: ${BUILDKITE_PLUGIN_RPMBUILD_SPEC}"
ls -la
pwd

sed "s/%name%/${BUILDKITE_PLUGIN_RPMBUILD_NAME}/g" ${BUILDKITE_PLUGIN_RPMBUILD_SPEC} > ${BUILDKITE_PLUGIN_RPMBUILD_SPEC}

rpmbuild -ba ${BUILDKITE_PLUGIN_RPMBUILD_SPEC} --define "_rpmdir ${BUILDKITE_PLUGIN_RPMBUILD_SHARE}"

